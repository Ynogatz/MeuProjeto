<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTelaMarcarReuniao">

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text='"               "'
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_area_da_sala"
        app:layout_constraintTop_toBottomOf="@+id/tv_area_da_sala" />

    <TextView
        android:id="@+id/tv_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text='"               "'
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_id" />

    <TextView
        android:id="@+id/tv_possuiArcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text='"               "'
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_nome"
        app:layout_constraintTop_toBottomOf="@+id/tv_nome" />

    <TextView
        android:id="@+id/tv_possuiMultimidia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text='"               "'
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_possuiArcon"
        app:layout_constraintTop_toBottomOf="@+id/tv_possuiArcon" />

    <TextView
        android:id="@+id/tv_quantidadePessoasSentadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text='"               "'
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_possuiMultimidia"
        app:layout_constraintTop_toBottomOf="@+id/tv_possuiMultimidia" />

    <TextView
        android:id="@+id/tv_nome_sala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text=' "                "'
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="28dp"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_area_da_sala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"
        android:text='"               "'
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nome_sala" />
</androidx.constraintlayout.widget.ConstraintLayout>